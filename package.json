{
	"name": "pholio",
	"version": "1.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "docker-compose --env-file .env --env-file src/.env.local up --remove-orphans",
		"build": "docker-compose --env-file .env --env-file src/.env.local build",
		"clean-rebuild": "docker-compose --env-file .env --env-file src/.env.local build --no-cache && docker-compose --env-file .env --env-file src/.env.local up",
		"down": "docker-compose --env-file .env --env-file src/.env.local down",
		"logs": "docker-compose logs -f",
		"db:migrate": "bun ./scripts/migrate.js"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^3.4.2",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"semantic-release": "^25.0.2"
	}
}
